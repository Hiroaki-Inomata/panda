## Process this file with automake to produce Makefile.in

sbin_PROGRAMS = aps dbstub dbredirector dbs
lib_LTLIBRARIES = libpandadb.la MCPSUB.la

MCPSUB_la_LDFLAGS	=	\
	-module 					\
	-version-info $(LTVERSION)	\
	-export-dynamic

libpandadb_la_LDFLAGS	=	\
	-version-info $(LTVERSION)	\
	-export-dynamic

aps_LDADD 		=	\
	$(LANG_OBJECTS)		\
	-L/usr/lib -lglib -lm -ldl -lpthread	\
	$(FIXED_LIBS)		\
	-L$(top_srcdir)/libs -lpanda -li18n $(OPENCOBOL_LIBS)	\
	MCPSUB.la libpandadb.la

dbstub_LDADD 		=	\
	$(LANG_OBJECTS)		\
	-L/usr/lib -lglib -lm -ldl -lpthread \
	$(FIXED_LIBS)		\
	-L$(top_srcdir)/libs -lpanda $(OPENCOBOL_LIBS)	\
	MCPSUB.la libpandadb.la

dbredirector_LDADD 		=	\
	-L/usr/lib -lglib -lm -ldl -lpthread	\
	$(FIXED_LIBS)		\
	$(POSTGRES_LIBS) \
	$(OPENCOBOL_LIBS)	\
	-L$(top_srcdir)/libs -lpanda -li18n	\
	libpandadb.la

dbs_LDADD 		=	\
	-L/usr/lib -lglib -lm -ldl -lpthread	\
	$(FIXED_LIBS)		\
	-L$(top_srcdir)/libs -lpanda	\
	libpandadb.la

MCPSUB_la_LIBADD	=

libpandadb_la_LIBADD	=	\
	$(POSTGRES_LIBS)

INCLUDES 			= \
	-I$(top_srcdir)	\
	-I$(top_srcdir)/include	\
	-I$(top_srcdir)/libs	\
	$(POSTGRES_CFLAGS)	\
	$(OPENCOBOL_CFLAGS)	\
	$(GNOME_INCLUDEDIR)


LANG_DRIVERS	=	\
	dotCOBOL.c		\
	OpenCOBOL.c

LANG_OBJECTS	= $(LANG_DRIVERS:.c=.o)

aps_SOURCES	=	\
	aps_main.c	aps_main.h	\
	apsio.c		apsio.h		\
	handler.c	handler.h	\
	defaults.h

aps_DEPENDENCIES	=	\
	defaults.h			\
	MCPSUB.la

dbstub_SOURCES	=	\
	dbstub_main.c	\
	handler.c	handler.h	\
	defaults.h

dbstub_DEPENDENCIES	=	\
	MCPSUB.la			\
	libpandadb.la

dbs_SOURCES	=	\
	dbs_main.c

dbs_DEPENDENCIES	=	\
	libpandadb.la

dbredirector_SOURCES	=	\
	dbredirector.c

dbredirector_DEPENDENCIES	=

libpandadb_la_SOURCES	=	\
	Postgres.c	Postgres.h	\
	Shell.c		Shell.h		\
	dbgroup.c				\
	redirect.c	redirect.h	\
	cobolvalue.c	cobolvalue.h

MCPSUB_la_SOURCES	=	\
	MCPSUB.c			\
	dotCOBOL.c	dotCOBOL.h	\
	OpenCOBOL.c	OpenCOBOL.h

BUILT_SOURCES = defaults.h

defaults.h: Makefile.am $(top_builddir)/config.status
	@echo "Creating defaults.h..."
	@echo "/* Automatically generated by Makefile */"    > defaults.h
	@echo "#define DOTCOBOL_COMMAND  \"@DOTCOBOL_COMMAND@\""           >> defaults.h
