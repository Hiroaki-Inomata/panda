PANDA=$HOME'/MONTSUQI/panda'
PANDALIB=$PANDA/libs/.lib
PANDADBLIB=$PANDA/dblibs/.lib
APPDIR=`pwd`
LOGDIR=$APPDIR
RUNDIR=$APPDIR

DBGEN=$PANDA'/tools/dbgen'
DBSTUB=$PANDA'/aps/dbstub'
DBS=$PANDA'/dbstuff/dbs'
GLAUTH=$PANDA'/glauth/glauth'
MONITOR=$PANDA/tools/monitor
HTSERVER=$PANDA/htserver/htserver
GLSERVER=$PANDA'/glserver/glserver'
PGSERVER=$PANDA'/pgserver/pgserver'
DBREDIRECTOR=$PANDA'/dbstuff/dbredirector'

export	MONPS_LOAD_PATH=.:$PANDA/libs/.libs
export	APS_HANDLER_LOAD_PATH=.:$PANDA/aps/.libs
export	MONDB_LOAD_PATH=.:$PANDA/dblib/.libs
export	RUBYLIB=.:$PANDA/aps
export	LD_LIBRARY_PATH=.:$PANDALIB:$PANDADBLIB:$PANDA/blob/.libs:$PANDAQI/libmondai/src/.libs:/usr/local/lib
export	APS_LOAD_PATH=.
export	APS_EXEC_PATH=.

PASSWORD="$APPDIR/passwd"
RECORDDIR="$APPDIR/rec"
SCREENDIR="$APPDIR/screen"

GLAUTH_LOG="$LOGDIR/glauth.log"
DBS_LOG="$LOGDIR/dbs.log"
MONITOR_LOG="$LOGDIR/monitor.log"
GLSERVER_LOG="$LOGDIR/glserver.log"
PGSERVER_LOG="$LOGDIR/pgserver.log"
DBREDIRECTOR_LOG="$LOGDIR/dbredirector.log"
DBSTUB_LOG="$LOGDIR/dbstub.log"

GLAUTH_PID="$RUNDIR/glauth.pid"
DBS_PID="$RUNDIR/dbs.pid"
MONITOR_PID="$RUNDIR/monitor.pid"
GLSERVER_PID="$RUNDIR/glserver.pid"
PGSERVER_PID="$RUNDIR/pgserver.pid"
DBREDIRECTOR_PID="$RUNDIR/dbredirector.pid"
