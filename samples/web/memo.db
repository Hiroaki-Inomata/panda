virtual	memo	{
	title		varchar(250);
	body		text;
	memo		text;
	key			text;
	inkey		dbcode(250);
};

path	body	{
	DBSELECT	{
		DECLARE	memo_body_csr	CURSOR	FOR
		SELECT	body, title	FROM	memo
		WHERE
			match(memo_ix,:key)
		;
	};
	DBFETCH		{
		FETCH	memo_body_csr
			INTO
				:body,
				:title;
	};
};


path	in	{
	DBIN	{
		DECLARE	memo_in_csr	CURSOR	FOR
		SELECT	body, title	FROM	memo
		WHERE
			key IN (:inkey)
		;
	};
};
