adrs	{
	name	varchar(40);
	tel		varchar(13);
	mail	{
		home	varchar(64);
		office	varchar(64);
	};
	toll	number(5,1);
	weight	number(5,1);
	address	varchar(80)[3];
	info	varchar(2000);
};

primary	{
	name;
};

path	tel	{
	DBSELECT	{
		DECLARE adrs_tel_csr CURSOR FOR
		SELECT	*
			WHERE
				tel = :tel
		;
	};
};

path	mail	{
	DBSELECT	{
		DECLARE adrs_mail_csr CURSOR FOR
		SELECT
#				*
				name,
				tel,
				mail.home,
				mail.office,
				toll,
				weight,
				address
			FROM adrs
			WHERE
				mail.home like :mail.home
			ORDER BY
				name
		;
	};
	DBFETCH	{
		FETCH FROM adrs_mail_csr
			INTO
#				:*
				:name,
				:tel,
				:mail.home,
				:mail.office,
				:toll,
				:weight,
				:address
		;
	};
	DBCLOSECURSOR	{
		CLOSE adrs_mail_csr;
	};
	DBUPDATE	{
		UPDATE adrs
			SET
				tel = :tel,
				weight = :weight,
				address = :address
			WHERE
				adrs.name = :name;
	};
	DBDELETEINSERT	{
		DELETE	FROM	adrs
			WHERE
				adrs.name = :name
		;
		INSERT	INTO	adrs
			(
				name,
				mail.home,
				mail.office,
				toll,
				weight,
				address
			)
			VALUES	(
				:name,
				:mail.home,
				:mail.office,
				:toll,
				:weight,
				:address
			)
		;
	};
	DBINSERT	{
		INSERT	INTO	adrs
			(
				name,
				mail.home,
				mail.office,
				toll,
				weight,
				address
			)
			VALUES	(
				:name,
				:mail.home,
				:mail.office,
				:toll,
				:weight,
				:address
			)
		;
	};
	DBDELETE	{
		DELETE	FROM	adrs
			WHERE
				adrs.name = :name
		;
	};
};
