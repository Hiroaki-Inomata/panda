memo	{
	title		varchar(250);
	body		text;
	memo		text;
};

path	memo	{
	DBSELECT	{
		DECLARE memo_memo_csr CURSOR FOR
#		SELECT	title, body	FROM	memo
		SELECT	*	FROM	memo
			WHERE
				match(memo_ix, :memo)
#		ORDER BY title DESC
		ORDER BY title ASC
		;
	};
	operation   DBCLOSECURSOR   {
		CLOSE memo_memo_csr
		;
	};
};
path	all {
	operation   DBSELECT    {
		DECLARE memo_all_csr CURSOR FOR
		SELECT	title, body	FROM	memo
			ORDER BY
				title
		;
	};
	operation   DBCLOSECURSOR   {
		CLOSE memo_all_csr
		;
	};
};
