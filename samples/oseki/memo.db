memo	{
	title		varchar(250);
	body		text;
	memo		text;
};

path	memo	{
	DBSELECT	{
		DECLARE memo_memo_csr CURSOR FOR
		SELECT	title, body, memo
			FROM	
				memo
#		SELECT	*	FROM	memo
			WHERE
				match(memo_ix, :title)
		ORDER BY 
				title
#		ORDER BY title ASC
		;
	};
	operation   DBCLOSECURSOR   {
		CLOSE memo_memo_csr
		;
	};
};
path	all {
	operation   DBSELECT    {
		DECLARE memo_all_csr CURSOR FOR
		SELECT	title, body, memo	
			FROM	
				memo
			ORDER BY
				title
		;
	};
	operation   DBUPDATE   {
		UPDATE	memo
			SET
				body = :body,
				memo = :memo
			WHERE
				title = :title
		;
	};
	operation   DBCLOSECURSOR   {
		CLOSE memo_all_csr
		;
	};
	operation   DBDELETE   {
		DELETE	FROM	memo
			WHERE
				title = :title
		;
	};
};
