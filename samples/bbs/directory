name	sample;

#	"~" will be expanded to HOME
base	"~/panda/samples";

#	"=" will be expanded to base or BASE_DIR
lddir	"=/bbs";
bddir	"=/bbs";
record	"=/bbs";

linkage		link;

ld	{
	bbs	"localhost:9100";
};
bd	{
	sample;
};

db_group	"BBS"	{
	type	"PostgreSQL";
	port	"localhost";
	name	"BBS";
};

db_group	"shell"	{
	type	"shell";
	priority	1000;
};
